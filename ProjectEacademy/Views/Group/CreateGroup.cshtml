@model ProjectEacademy.Models.CreateGroupModels
@using Microsoft.AspNet.Identity
@using ProjectEacademy.Extension
@{
    ViewBag.Title = "CreateGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if(User.Identity.GetAccountType().Equals(0))
{
    Response.Redirect("~/Home");
}
<h2>CreateGroup</h2>
@using (Html.BeginForm("CreateGroup", "Group", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationMessage("Error", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(g => g.ClassName, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(g => g.ClassName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.SubjectName, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(g => g.SubjectName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Color, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(g => g.Color, new { @class = "form-control" })
    </div>
    <div>
        <input type="submit" value="Create Group" />
    </div>
}

