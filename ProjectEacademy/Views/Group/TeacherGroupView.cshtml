@model IEnumerable<ProjectEacademy.Models.TeacherGroupViewModels>

@{
    ViewBag.Title = "TeacherGroupView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TeacherGroupView</h2>

<p>
    @Html.ActionLink("Create New Class", "CreateGroup")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClassID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubjectName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClassID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectName)
        </td>
        <td>
            @Html.ActionLink("Create Post", "CreatePost", controllerName: "User", routeValues: new { ClassID = item.ClassID }, htmlAttributes: null) |
            @Html.ActionLink("See All Members", "TeacherGroupDetailView", routeValues: new { ClassID = item.ClassID }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
