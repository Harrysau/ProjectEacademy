<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/RegisterCSS.css" />
    <link rel="stylesheet" href="~/Content/RegisterSCSS.css" />
    <link href="~/Content/userprofilestyle.css" rel="stylesheet" />
    <script src="~/Content/js/userprofilescript.js"></script>
    <!-- jQuery UI CSS Reference -->
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-dark bg-primary navbar-expand-md fixed-top" style="padding:5px;">
        <div class="container">
            <div class="navbar-header">
                @if (!Request.IsAuthenticated)
                {
                    @Html.ActionLink("eAcademy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("eAcademy", "UserHome", "User", new { area = "" }, new { @class = "navbar-brand" })
                }

            </div>
            <button class="navbar-toggler" data-target="#navcol" data-toggle="collapse">
                <span class="fa fa-bars" style="padding: 0px; margin: 0px; border: 0px;"></span>
            </button>
            <div id="navcol" class="navbar-collapse collapse">
                <form class="form-inline">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                </form>
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item">@Html.ActionLink("What's Due?", "Index", "Home", new {@class = "nav-link"})</li>
                    <li class="nav-item">@Html.ActionLink("Classes", "ViewGroupRedirect",controllerName:"Group",routeValues:null,htmlAttributes: new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Copyright eAcademy. All Rights Reserved</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
